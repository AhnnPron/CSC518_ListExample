<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCreditCardActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">>

        <EditText
            android:id="@+id/creditCardNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Credit Card Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/creditCardStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Start Date"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/creditCardMinSpendET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Minimum Spend"
            android:inputType="number" />

        <EditText
            android:id="@+id/creditCardBonusPointsET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Bonus Points"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/deleteCreditCardBT"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:onClick="onDeleteButtonPressed"
                android:text="Delete" />

            <Button
                android:id="@+id/updateCreditCardBT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onUpdateButtonPressed"
                android:text="Update" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>